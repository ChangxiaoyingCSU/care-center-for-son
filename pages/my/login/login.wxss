   .container { 
     /* background: url(../../../assets/home/1.png); */
    height: 100%; 
    display: flex; 
    flex-direction: column; 
    padding: 0; 
    box-sizing: border-box; 
    /* background-color: rgb(156, 23, 78) */
   } 
    
   .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
   /*登录图片*/
   .login-icon{ 
    flex: none; 
   } 
    
   .login-img{ 
    width: 750rpx;
   } 
    
   /*表单内容*/
   .login-from { 
    margin-top: 0px; 
    flex: auto; 
    height:100%;
     /* background: url(../../../assets/home/1.png); */
   } 
    
   .inputView { 
    background-color: #fff; 
    line-height: 45px; 
    border-radius:20px;
    border:1px inset #fff;
   } 
    
   /*输入框*/
   .nameImage, .keyImage { 
    margin-left: 22px; 
    width: 18px; 
    height: 16px
   } 
    
   .loginLab { 
    margin: 15px 15px 15px 10px; 
    color: #545454; 
    font-size: 14px
   } 
    
   .inputText { 
    flex: block; 
    float: right; 
    text-align: right; 
    margin-right: 22px; 
    margin-top: 11px;
    color: #cccccc; 
    font-size: 14px
   } 
   .line { 
    margin-top: 8px; 
   } 
    
