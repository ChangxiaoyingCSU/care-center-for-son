.container { 
	/* background: url(../../../assets/home/1.png); */
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 /* background-color: rgb(156, 23, 78) */
} 
.top{
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 100rpx;
	color: #333;
}
.background {
	width: 100%;
	height: 100%;
	position:fixed; 
	background-size:100% 100%;
	z-index: -1;
}
.top image{
	width: 150rpx;
	height: 150rpx;
}
.top text{
	margin-top: 10rpx;
	font-weight: bold;
}
.content{
	border-radius: 20rpx;
	width: 90%;
	background-color: #ffffff;
	margin: auto;
	font-size: 26rpx;
	line-height: 43rpx;
	margin-top: 500rpx;
	display: block;
	text-align: justify;
	color: #333;
	letter-spacing:1px;
	font-weight: 600;
	opacity: 0.7;
}
.buttom{ 
	/* position: fixed; */
	bottom: 50rpx;
	font-size: 28rpx;
	color: #ffffff;
	margin: auto;
}
.wrap{
	width: 100%;
	display: flex;
	justify-content: center;
}