/* components/card/index.wxss */
page{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.card-box{
  width: 100%;
  height: auto;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border:none;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0rpx 4rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}
.card-top{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom:2rpx solid #d8d8d8;
}
/* 头像名字 */
.avatar-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.sex-icon{
  width: 48rpx;
  height: 48rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top:-20rpx;
  right: -20rpx;
}
.avatar-icon{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
}
/* 右侧信息区域 */
.right-box{
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
  margin-left:60rpx;
}
.wx-nickname{
  color:#c22A1E;
}
.right-label{
  display: inline-block;
  width: 104rpx;
  margin-right: 48rpx;
  color:#666;
}
.user-info{
  margin-bottom:32rpx; 
}