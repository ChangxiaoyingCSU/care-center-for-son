page{
   background-color: #fff;
}
.form-area{
   display: block;
   padding: 20rpx 0 40rpx;
}
.content{
   width: 690rpx;
   background-color: #fff;
   position: absolute;
   top:267rpx;
   border:1px solid #e9f0f8;
   border-radius: 30rpx;
   margin: 10rpx 30rpx 50rpx;
   box-sizing: border-box;
   box-shadow: 0 0 20rpx #000;
   z-index:2;
}
.banner{
   width: 100%;
   height: 510rpx;
   background-image: linear-gradient(to bottom right, rgb(37, 156, 235), rgb(158, 195, 206));
   position: relative;
}
.banner text{
   position: absolute;
   top:120rpx;
   left:120rpx;
   font-size: 68rpx;
   color:#fff;
}
.avatar {
   width: 150rpx;
   height: 150rpx;
   margin:20rpx auto 40rpx;
}
.avatar-img {
   width: 100%;
   height: 100%;
   border-radius: 50%;
   border:1px solid #ccc;
   box-shadow: 0 0 18px #ccc;
}
.input-group{
   display: flex;
   flex-direction: row;
   align-items: center;
   margin: 20rpx auto 40rpx;
   width: 500rpx;
   padding:10rpx 20rpx;
   border-radius: 20rpx;
   background-color: #fff;
   box-shadow: 0 0 10rpx  rgb(126, 126, 126);
}
.input-group .input-item{
   width: 350rpx;
   padding: 4px;
   font-size: 28rpx;
}
.input-group label{
   width: 140rpx;
   margin-left:10rpx;
   font-size: 24rpx;
}
.input-group radio{
   transform:scale(0.7);
}
.input-group textarea{
   font-size: 28rpx;
   height: 200rpx;
}
.btn-area button{
   width: 400rpx;
   height: 80rpx;
   line-height: 80rpx;
   padding:0rpx;
   border-radius: 10rpx;
   color:#fff!important;
   background-color: #2089f6!important;
}

