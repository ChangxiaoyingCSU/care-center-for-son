/* pages/healthy/healthy/healthy.wxss */
.chart {
  position: absolute;
  top: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

ec-canvas {
  width: 100%;
  height: 100%;
}

/* tab切换 方法二 */
.nav_tab{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
 
}
.show{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#000;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:100rpx;
  text-align:center;
  background-color: #F4A460;
  color:#ffffff;
  flex:1;
  font-size:28rpx;
}
.nav_underline{
  background:#ffffff;
  width:54rpx;
  height:6rpx;
  margin-top:-10rpx;
  margin-left:50rpx;
  border-radius:8rpx;
}
.tab_view{
  width:100%;
}
