/* tab切换 方法二 */
.nav_tab{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  border-radius: 20rpx;
}
.show{
  line-height:100rpx;
  text-align:center;
  flex:1;
  background-color: #9E87FF;
  color:#000;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:100rpx;
  text-align:center;
  background-color: #9E87FF;
  color:#ffffff;
  flex:1;
  font-size:28rpx;
  border-style: inset;
  border-left-width: 10rpx;
  border-right-width: 10rpx;
  border-top-width: 10rpx;
  border-bottom-width: 10rpx;
  border-left-color: #9E87FF;
  border-right-color: #9E87FF;
  border-top-color: #9E87FF;
  border-bottom-color: #9E87FF;
}
.nav_underline{
  background:#ffffff;
  width:54rpx;
  height:4rpx;
  margin-top:-10rpx;
  margin-left:50rpx;
  border-radius:8rpx;
}
.tab_view{
  width:100%;
  height: 100%;
}

.tab_view2{
  width:100%;
  height: 100%;
}

image{
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
}
.content{
  padding: 20rpx 40rpx;
}

.info{
  position: relative;
  font-weight: bold;
  font-size: 34rpx;
  margin-left: 28rpx;
  margin-left: 40rpx;
}
.info::before{
  content: "";
  position: absolute;
  display: block;
  width: 12rpx;
  height: 40rpx;
  background-color: #3fbaa6;
  border-radius: 10rpx;
}
.color{
  background-color: #3fbaa6 !important;
  color: white;
}
.items{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}
.item{
  padding: 10rpx 20rpx;
  background-color: #f4f4f4;
  font-size: 28rpx;
  font-weight: 400;
  width: 115rpx;
  height: 45rpx;
  line-height: 50rpx;
  float: left;
  margin-right: 19rpx;
  margin-bottom: 25rpx;
  text-align: center;

}
.item:active{
  filter: brightness(90%);
}
.item:nth-child(4n){
  margin-right: 0rpx;
}
.middle{
  margin-top: 40rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.search{
  display: flex;
  align-items: center;
  height: 70rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
}
input{
  width: 80%;
  padding-left: 20rpx;
}
.icon-xingtaiduICON{
  color: #c1c1c1;
  margin: 0rpx 20rpx;
}
input[placeholder]{
  font-size: 29rpx;
}
.btn{
  width:100% !important;
	border-top-right-radius: 50rpx;
	border-top-left-radius: 50rpx;
  font-weight: normal;
  background-color: #3fbaa6;
  color: white;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.btn:active{
  filter: brightness(90%);
}
.tips{
	border-width: 20rpx;
	border-style: solid;
  border-left-width: 10rpx;
  border-right-width: 10rpx;
  border-top-width: 0rpx;
  border-bottom-width: 10rpx;
  border-left-color: #3fbaa6;
  border-right-color: #3fbaa6;
  border-top-color: #3fbaa6;
  border-bottom-color: #3fbaa6;
}

.table {
	border: 0px solid darkgray;
 }
 .tr {
	display: flex;
	width: 100%;
	justify-content: center;
	height: 3rem;
	align-items: center;
 }
 .td {
	width:40%;
	justify-content: center;
	text-align: center;
 }
 .td_single{
	width:100%;
	justify-content: center;
	text-align: center;
 }
 .bg-w{
	background: snow;
 }
 .bg-g{
	background: #E6F3F9;
 }
 .tr_single {
	display: flex;
	width: 100%;
	justify-content: center;
	height: 3rem;
	align-items: center;
	background-color: #3fbaa6;
 }
 .th {
	width: 50%;
	justify-content: center;
	background: #3fbaa6;
	color: #fff;
	display: flex;
	height: 3rem;
	align-items: center;
 }
 .word{
